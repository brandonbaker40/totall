<h1>Accounts</h1>
<h3><%= @user.name %></h3>
<table>
  <tr>
    <th>Name</th>
    <th>Category</th>
    <th>Active</th>
    <th>Note</th>
    <th colspan="3"></th>
  </tr>

  <% @accounts.each do |account| %>
    <tr>
      <td><%= account.name %></td>
      <td><%= account.category.name %></td>
      <td><%= account.active %></td>
      <td><%= account.note %></td>
      <td><%= link_to 'Show', account_path(account) %></td>
      <td><%= link_to 'Edit', edit_account_path(account) %></td>
      <td><%= link_to 'Delete', account_path(account),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to 'New account', new_account_path %></p>
