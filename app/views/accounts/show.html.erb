<p>
  <strong>Name:</strong>
  <%= @account.name %>
</p>
<p>
  <strong>Category:</strong>
  <%= @account.category.name %>
</p>
<p>
  <strong>Active:</strong>
  <%= @account.active %>
</p>
<p>
  <strong>Note:</strong>
  <%= @account.note %>
</p>
<p>
  <strong>Balance:</strong>
  <%= link_to number_to_currency(@balance.value), user_account_balances_path(params[:user_id], params[:id]) %>
</p>

<%= link_to 'Edit', edit_user_account_path(current_user_id, params[:id]), class: "btn btn-lg btn-primary" %>
<%= link_to 'Delete', user_account_path(current_user_id, params[:id]), class: "btn btn-lg btn-primary",
        method: :delete,
        data: { confirm: 'Are you sure?' } %>
