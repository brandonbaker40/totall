<%= form_with model: @account, local: true do |form| %>

  <% if @account.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@account.errors.count, "error") %> prohibited
        this account from being saved:
      </h2>
      <ul>
        <% @account.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
  <p>
    <%= form.label :category %><br>
    <%= form.collection_select(:category, Category.order(:name), :id, :name, {:prompt => true}) %>
  </p>
  <p>
    <%= form.label :active %> <br />
    <%= form.check_box :active %> <br />
  </p>
  <p>
    <%= form.label :note %> <br />
    <%= form.text_area :note %> <br />
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>
